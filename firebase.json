{
  "functions": {
    "source": "backend/functions",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  },
  "hosting": [
    {
      "target": "symthink-news",
      "public": "apps/news/dist-www",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api3"
        },
        {
          "source": "/embed",
          "destination": "/embed"
        },
        {
          "source": "/**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "symthink-news-test",
      "public": "apps/news/dist-www",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api3"
        },
        {
          "source": "/embed",
          "destination": "/embed"
        },
        {
          "source": "/**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "symthink-org",
      "public": "apps/org-home/www",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 6001
    },
    "pubsub": {
      "port": 8087
    }  
  }
}
